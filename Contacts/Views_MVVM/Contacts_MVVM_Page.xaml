<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Contacts.ViewModels"
             xmlns:m="clr-namespace:Contacts.CoreBusiness;assembly=Contacts.CoreBusiness"
             x:DataType="vm:ContactsViewModel"
             x:Class="Contacts.Views_MVVM.Contacts_MVVM_Page"
             Title="Contacts">

    <Grid
        Padding="5"
        RowDefinitions="50, *, 50"
        ColumnDefinitions="*"
        RowSpacing="5">
        
        <SearchBar 
            x:Name="SearchBar"
            Grid.Row="0"
            Grid.Column="0"
            Placeholder="Search Contact"
            Text="{Binding FilterText}"/>

        <CollectionView
            x:Name="ContactsCollection"
            ItemsSource="{Binding Contacts}"
            Grid.Row="1"
            Grid.Column="0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:Contact">
                    <StackLayout>
                        
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItem IconImageSource="delete.svg"
                                           IsDestructive="True"
                                           Command="{Binding Source={x:Reference ContactsCollection}, Path=BindingContext.DeleteContactCommand}"
                                           CommandParameter="{Binding ContactId}"/>
                            </SwipeView.RightItems>
                            
                            <SwipeView.LeftItems>
                                <SwipeItem IconImageSource="edit.svg"
                                           IsDestructive="False"
                                           Command="{Binding Source={x:Reference ContactsCollection}, Path=BindingContext.GotoEditContactCommand}"
                                           CommandParameter="{Binding ContactId}"/>
                            </SwipeView.LeftItems>
                                
                            <StackLayout>
                                    <Frame Margin="0,5,0,5" BorderColor="Black">
                                        <StackLayout Orientation="Vertical" Spacing="5">
                                            <Label Text="{Binding Name}" />
                                            <Label Text="{Binding Email}" />
                                            
                                            <StackLayout Orientation="Horizontal" Spacing="10" >
                                                <Label Text="Call" 
                                                       TextColor="Green"
                                                       FontAttributes="Bold">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer 
                                                            Command="{Binding Source={x:Reference ContactsCollection}, Path=BindingContext.CallCommand}"
                                                            CommandParameter="{Binding Phone}"/>
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                
                                                <Label Text="Mail" 
                                                       TextColor="DarkRed"
                                                       FontAttributes="Bold">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer 
                                                            Command="{Binding Source={x:Reference ContactsCollection}, Path=BindingContext.MailCommand}"
                                                            CommandParameter="{Binding Email}"/>
                                                    </Label.GestureRecognizers>
                                                </Label>
                                            </StackLayout>
                                        </StackLayout>
                                    </Frame>
                            </StackLayout>
                        </SwipeView>
                        
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button
            Grid.Row="2"
            Grid.Column="0"
            Text="Add Contact"
            Command="{Binding GotoAddContactCommand}"/> 
        
    </Grid>
    
</ContentPage>